$white = #FFFFFFFF

.app-header
  width 100%
  display flex
  flex-direction column
  align-items center
  background url('../../../assets/background.png') center center
  background-size cover
  position relative
  padding 150px 0
  color $white
  margin-bottom 60px
  &_brand
    text-align center
  &_title
    font-weight 400
    font-size 4.2em
    letter-spacing 0.01em
    line-height 1em
    transition all ease .3s
  &_description
    transition all ease .3s
  &_list
    bottom -30px
    position absolute
    padding-bottom 5px
    width 80%
    min-height 87px
    background-color rgba(255, 255, 255, .9)
    border-radius 5px
    overflow-x scroll
    white-space nowrap
    box-shadow 0 14px 28px rgba(0,0,0,.1), 0 10px 10px rgba(0,0,0,.08)
    transition all .6s ease
    opacity 0
    ul
      transform translateX(-60px)
      opacity 0
      display flex
      li
        transition transform .3s ease-in-out
        width 72px
        height 72px
        background-color $white - 10
        display flex
        margin 5px 0 0 5px
        border-radius 3px
        flex none
        padding 5px
        justify-content center
        &:last-child
          margin-right 5px
        img
          width 90%
          min-width 100%
          border-radius 5px

@media screen and (min-width: 768px)
  .app-header
    margin-bottom 15px
    &_list
      overflow-x inherit
      width auto
      min-height 75px

@media screen and (min-width: 992px)
  .app-header
    height 400px
    padding 40px
    justify-content space-around
    &_title
      font-size 6em
    &_description
      font-size 2.1em
    &_list
      bottom auto
      position relative
      background-color rgba(255, 255, 255, .7)
      ul
        margin-top -15px
        li
          transition all .6s ease
          margin 8px 0 4px 8px
          box-shadow 0 1px 5px rgba(0,0,0,0.25), 0 3px 9px rgba(0,0,0,0.15)
          &:hover
            transform translateY(-10px)
            box-shadow 2px 10px 5px rgba(0,0,0,.05)
          &:last-child
            margin-right 8px
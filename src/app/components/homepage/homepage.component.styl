$white = #FFFFFFFF

.app-header
  width 100%
  display flex
  flex-direction column
  align-items center
  background-color red
  position relative
  padding 150px 0
  color $white
  &_title
    font-weight 400
    font-size 4em
  &_description
    text-align center
  &_list
    position absolute
    bottom -15px
    padding-bottom 5px
    width 80%
    background-color $white
    border-radius 5px
    box-shadow 0 5px 20px 5px rgba(0,0,0,.1)
    overflow-x scroll
    white-space nowrap
    li
      width 50px
      height 50px
      background-color red
      margin 5px
      display inline-block
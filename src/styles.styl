@import url('https://fonts.googleapis.com/css?family=Poppins:400,400i,700,700i')

/* Reset */
*, *:after, *:before
  box-sizing border-box

body
  margin 0
  padding 0
  font-family 'poppins', helvetica, sans-serif
  background #f7f7f7
  font-size 65.2%

h1, h2, h3, h4, h5, h6, p, img, div, input, textarea, ul, li
  margin 0
  padding 0
  border 0
  background none

ul
  list-style none

/* Helpers */
.scrollable
  &::-webkit-scrollbar-thumb
    height 5px
    background #c9c9c9
    border-radius 5px
  &::-webkit-scrollbar
    background-color #FFFFFF - 10
    height 5px
  &::-webkit-scrollbar-track
    background #FFFFFF - 10